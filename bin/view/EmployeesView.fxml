                  <TableColumn fx:id="firstname" prefWidth="75.0" text="First name" />
              </columns>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <GridPane prefHeight="139.0" prefWidth="599.0">
