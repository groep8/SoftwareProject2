<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.StatisticController">
   <left>
      <FlowPane onDragDetected="#goHome" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #808080;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="130.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <FlowPane.margin>
                  <Insets bottom="20.0" left="10.0" top="20.0" />
               </FlowPane.margin>
            </ImageView>
            <Button mnemonicParsing="false" onAction="#goHome" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Home" textFill="WHITE">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#goTraining" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Training" textFill="WHITE">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goEmployees" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Employees" textFill="WHITE">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goStatistic" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: white;" text="Statistic">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goOptions" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Options" textFill="#fcfcfc">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children></FlowPane>
   </left>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="27.0" prefWidth="323.0" text="+a includes all archived things">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></Label>
            <Button mnemonicParsing="false" onAction="#bar" prefHeight="40.0" prefWidth="180.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Bar chart" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="5.0" top="200.0" />
               </VBox.margin>
            </Button>
           
            <Button mnemonicParsing="false" onAction="#pie" prefHeight="40.0" prefWidth="180.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Pie chart" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="5.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#line" prefHeight="40.0" prefWidth="180.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Line chart" textFill="#fcfcfc">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
