<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmployeesController">
   <left>
      <FlowPane onDragDetected="#goHome" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #808080;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="130.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <FlowPane.margin>
                  <Insets bottom="20.0" left="10.0" top="20.0" />
               </FlowPane.margin>
            </ImageView>
            <Button mnemonicParsing="false" onAction="#goHome" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Home" textFill="WHITE">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#goTraining" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Training" textFill="#fcfcfc">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goEmployees" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: white;" text="Employees">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goStatistic" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Statistic" textFill="#fcfcfc">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goOptions" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Options" textFill="#fcfcfc">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children></FlowPane>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="employees" prefHeight="252.0" prefWidth="607.0">
              <columns>
                <TableColumn fx:id="id" prefWidth="75.0" text="Employee id" />
                  <TableColumn fx:id="lastname" prefWidth="75.0" text="Last name" />
                  <TableColumn fx:id="firstname" prefWidth="75.0" text="First name" />
              </columns>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="filterField" layoutX="66.0" layoutY="107.0" prefHeight="45.0" prefWidth="245.0" />
                  <Button layoutX="21.0" layoutY="33.0" mnemonicParsing="false" onAction="#assign" prefHeight="40.0" prefWidth="182.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="ASSIGN" textFill="#fcfcfc">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Button>
                  <Button layoutX="209.0" layoutY="33.0" mnemonicParsing="false" onAction="#showAssignedEmployees" prefHeight="40.0" prefWidth="182.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Show assigned training" textFill="#fcfcfc">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Button>
                  <Button layoutX="399.0" layoutY="33.0" mnemonicParsing="false" onAction="#showUnboundEmployees" prefHeight="40.0" prefWidth="195.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Show unassigned training" textFill="#fcfcfc">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Button>
                  <Label layoutX="21.0" layoutY="111.0" prefHeight="36.0" prefWidth="52.0" text="Search">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <TableView fx:id="tableTraining" prefHeight="298.0" prefWidth="607.0">
              <columns>
                <TableColumn fx:id="idTraining" prefWidth="295.0" text="Training id" />
                <TableColumn fx:id="trainingNaam" prefWidth="303.0" text="Training name" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
